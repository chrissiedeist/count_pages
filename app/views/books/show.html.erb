<p id="notice"><%= notice %></p>

<h2><%= @book.title %></h2>
<p>Author: <%= @book.author %></p>
<p>Num pages: <%= @book.num_pages%></p>

<p>Read by:</p>
<ul>
<% @book.users.each do |user| %>
<li><%= user.name %></li> 
<% end %>
</ul>

<% if current_user.has_read?(@book) %>
<%= link_to 'Mark as Unread', unread_book_path(@book)  %>
<% else %>
<%= link_to 'Mark as Read', read_book_path(@book)  %>
<% end %>

<%= link_to 'Edit', edit_book_path(@book) %>
<%= link_to 'Delete', @book, method: :delete, data: { confirm: 'Are you sure?' } %>
