<h1>Add a Book</h1>

<h3>Search for a book to create:</h3>
<p>
    <input id="txtBookSearch" type="text">
</p>
<div id="divDescription"></div>

<%= form_for(@book) do |f| %>
  <% if @book.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@book.errors.count, "error") %> prohibited this book from being saved:</h2>

      <ul>
      <% @book.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.hidden_field :title %>
  </div>
  <div class="field">
    <%= f.hidden_field :author %>
  </div>
  <div class="field">
    <%= f.hidden_field :num_pages %>
  </div>
  <div class="field">
    <%= f.hidden_field :isbn %>
  </div>
  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>

<h3>Or enter book info manually:</h3>
<%= render 'form' %>

<%= link_to 'Back', books_path %>
