<!DOCTYPE html>
<html>
<head>
  <title>CountPages</title>
  <%= stylesheet_link_tag    'application', media: 'all' %>
  <%= javascript_include_tag 'application' %>
  <%= csrf_meta_tags %>
</head>
<body>

<%= yield %>

<div class="container">                                    
  <% flash.each do |key, value| %>                         
    <h3 class="alert alert-<%= key %>"><%= value %></h3>   
  <% end %>                                                
</div>                                                     

<% if user_signed_in? %>
  <%= link_to('Logout', destroy_user_session_path) %>
<% end %>

</body>
</html>
